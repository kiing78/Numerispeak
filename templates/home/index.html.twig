{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    {# app.user : app est la superglobal de symfony qui prend l'utilisateur avec getUser() automatiquement #}
    {% if app.user %}
    <h1>Hello {{app.user.username}} ! ✅</h1>
    {# voici ton role {{app.user.role.roleName}} #}
        <a href="{{path("app_logout")}}">se déconnecter</a><br>
        {% if app.user.getRole().roleName == "ROLE_ADMIN" %}
        <a href="{{path("app_admin")}}">dashboard admin</a><br>
        {% endif %}
    {% else %}
    <h1>test! ✅</h1>
        <a href="{{path("app_user_new")}}">s'inscrire</a><br>
        <a href="{{path("app_login")}}">se connecter</a><br>
    {% endif %}
</div>
{% endblock %}
